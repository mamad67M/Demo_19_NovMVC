@model IEnumerable<Demo_19_NovMVC.Models.Produit>


@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] !=null) { 
    <h4 class="text-success">@TempData["success"]</h4>
}

<div class="container p-3">
    <div class="row pt-4 pb">
        <div class="col-6">
            <h4 class="text-primary">Liste des Produit</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Produit" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>&nbsp;Create</a>
        </div>
    </div>


    <br />



    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="text-center">
                    <th>Produit ID</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="text-center">
                        <td>@obj.ProduitID</td>
                        <td>@obj.Description</td>
                        <td>@obj.Prix</td>
                        <td class="w-100 btn-group" role="group">
                            <a asp-controller="Produit" asp-action="Edit" asp-route-id="@obj.ProduitID" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Produit" asp-action="Delete" asp-route-id="@obj.ProduitID" class="btn btn-danger mx-1 "><i class="bi bi-trash-fill"></i></a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }

</div>